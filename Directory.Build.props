<Project>
  <PropertyGroup>
    <PackageOutputPath>$([System.IO.Path]::GetFullPath('$(MSBuildThisFileDirectory)'))\packages</PackageOutputPath>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <Deterministic>true</Deterministic>
    <EnableNETAnalyzers>true</EnableNETAnalyzers>
    <AnalysisMode>AllEnabledByDefault</AnalysisMode>
    <AnalysisLevel>latest</AnalysisLevel>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <Version>0.0.1</Version>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <Authors>Matteo Dell'Acqua</Authors>
    <PackageVersion>$(Version)</PackageVersion>
    <PackageProjectUrl>https://github.com/MatteoH2O1999/DotnetLibs</PackageProjectUrl>
    <RepositoryUrl>https://github.com/MatteoH2O1999/DotnetLibs</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <Copyright>Copyright Â© Matteo Dell'Acqua 2025-$([System.DateTime]::Now.ToString("yyyy"))</Copyright>
  </PropertyGroup>

  <PropertyGroup Condition="'$(GITHUB_ACTIONS)' == 'true'">
    <ContinuousIntegrationBuild>true</ContinuousIntegrationBuild>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="8.0.0" PrivateAssets="All" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\README.md" Pack="true" PackagePath="/" />
  </ItemGroup>

  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Exec Command="dotnet tool restore" WorkingDirectory="$([System.IO.Path]::GetFullPath('$(MSBuildThisFileDirectory)'))" />
    <Exec Command="dotnet csharpier check ." WorkingDirectory="$([System.IO.Path]::GetFullPath('$(MSBuildThisFileDirectory)'))" />
    <Exec
      Command="dotnet format style --verify-no-changes --severity info -v n ."
      Condition="'$(Configuration)'=='Release'"
      WorkingDirectory="$([System.IO.Path]::GetFullPath('$(MSBuildThisFileDirectory)'))"
    />
    <Exec
      Command="dotnet format analyzers --verify-no-changes --severity info -v n ."
      Condition="'$(Configuration)'=='Release'"
      WorkingDirectory="$([System.IO.Path]::GetFullPath('$(MSBuildThisFileDirectory)'))"
    />
  </Target>

  <Target Name="Lint code" BeforeTargets="ResolveProjectReferences">
    <Exec Command="dotnet tool restore" WorkingDirectory="." Condition="'$(DesignTimeBuild)' == 'true' OR '$(BuildingProject)' != 'true'" />
    <Exec Command="dotnet csharpier format ." WorkingDirectory="." Condition="'$(DesignTimeBuild)' == 'true' OR '$(BuildingProject)' != 'true'" />
    <Message Text="Not a design-time build. Skip running csharpier in write mode." Condition="'$(DesignTimeBuild)' != 'true' OR '$(BuildingProject)' == 'true'" Importance="normal" />
  </Target>
</Project>
