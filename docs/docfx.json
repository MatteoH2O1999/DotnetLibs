{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../libraries",
          "files": [
            "**/src/*.csproj"
          ]
        }
      ],
      "output": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**",
          "index/index.md"
        ]
      },
      {
        "files": [
          "index.md"
        ],
        "src": "index",
        "dest": "api"
      }
    ],
    "resource": [
      {
        "files": [
          "favicon.svg"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "WaterLibs",
      "_appTitle": "WaterLibs",
      "_appFooter": "Â© Matteo Dell'Acqua. All rights reserved.",
      "_appLogoPath": "favicon.svg",
      "_appFaviconPath": "favicon.svg",
      "_disableContribution": true,
      "_enableSearch": true,
      "pdf": true
    }
  }
}